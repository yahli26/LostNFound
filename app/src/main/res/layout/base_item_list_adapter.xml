<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgShowIcon"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tvShowType"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-22dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/ivBlackLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescription"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/tvShowDate"
        android:background="@drawable/blacklock_24dp" />

    <TextView
        android:id="@+id/tvShowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescription"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/imgIcon"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvShowType"
        android:maxLines="1"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tvShowType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@id/imgShowIcon"
        android:text="Type"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#353232"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tvSeqTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescription"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/ivBlackLock"
        android:maxLines="2"
        android:text="SeqTip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />

</RelativeLayout>